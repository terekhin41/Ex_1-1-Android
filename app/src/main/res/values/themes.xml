<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="NMedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.AppTheme.LikeButton" parent="Widget.MaterialComponents.Button.TextButton.Icon" >
        <item name="icon">@drawable/ic_like_24dp</item>
        <item name="iconTint">@color/like_button_tint</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="minWidth">@dimen/icon_button_min_size</item>
        <item name="minHeight">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.AppTheme.ShareButton" parent="Widget.MaterialComponents.Button.TextButton.Icon" >
        <item name="icon">@drawable/ic_share</item>
        <item name="iconTint">@color/share_button_tint</item>
        <item name="android:textColor">@color/share_button_tint</item>
        <item name="minWidth">@dimen/icon_button_min_size</item>
        <item name="minHeight">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.AppTheme.OptionsButton" parent="Widget.MaterialComponents.Button.TextButton.Icon" >
        <item name="icon">@drawable/ic_options_24dp</item>
        <item name="iconTint">@color/view_button_tint</item>
        <item name="minWidth">@dimen/icon_button_min_size</item>
        <item name="minHeight">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.AppTheme.Views" parent="Widget.MaterialComponents.Button.TextButton.Icon" >
        <item name="srcCompat">@drawable/ic_view_24</item>
    </style>
</resources>